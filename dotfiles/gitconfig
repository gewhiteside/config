[user]
        name = George Whiteside
        email = whiteside@reservoir.com
[push]
	default = upstream
[core]
        excludesfile = ~/.gitignore
        # Git less options--don't clear the screen on exit.
        pager = less -X
        # When using a shell inside Emacs, cat should be used as the pager.
        # pager = cat
[color]
        ui = auto
[alias]
        co = checkout
        br = branch
        st = status
        show-oneline = !git --no-pager show --no-patch --no-decorate --oneline
[pretty]
        ref = %h (\"%s\", %ad)
[log]
        # Print out the ref names of any commits that are shown.
        decorate = true
[diff]
        # Enable basic rename detection.
        renames = true
[rebase]
        autosquash = true
[rerere]
        enabled = true
        autoupdate = true
[pager]
        branch = off
        # See <git>/contrib/diff-higlight/README for more information about
        # diff-highlight.
        log = diff-highlight | less -X
        show = diff-highlight | less -X
        diff = diff-highlight | less -X
[pull]
	ff = only
