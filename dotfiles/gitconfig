[push]
	default = upstream
[core]
        excludesfile = ~/.gitignore
        # git less options--enable color and don't clear screen.
        pager = less -X
        # When using a shell inside emacs, cat should be used as the pager.
        # pager = cat

[color]
        ui = auto
[alias]
        co = checkout
        br = branch
        ci = commit
        st = status
        show-oneline = !git --no-pager show -s --oneline --no-decorate
[pretty]
        ref = %h (\"%s\", %ad)
[log]
        decorate = true
[diff]
        renames = true
[rebase]
        autosquash = true
[rerere]
        enabled = true
        autoupdate = true
[pager]
        branch = off
        log = diff-highlight | less -X
        show = diff-highlight | less -X
        diff = diff-highlight | less -X
