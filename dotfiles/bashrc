# If this shell is not interactive, don't do anything.
[[ $- != *i* ]] && return

source ~/.bash_aliases
source ~/.bash_prompt
source ~/.git-completion.bash
source ~/.git-prompt.sh
[ -f ~/reservoir/bash_reservoir ] && source ~/reservoir/bash_reservoir

# Increase the size of the  history file.
HISTFILESIZE=3000
# Don't put duplicate lines or lines starting with space in the history.
HISTCONTROL=ignoreboth
# Time stamp commands in the history file.
HISTTIMEFORMAT="%F %T "
# Append to the history file, don't overwrite it.
shopt -s histappend

# Don't try to complete an empty command.
shopt -s no_empty_cmd_completion

# Add colors for ls.
type dircolors &>/dev/null && eval "$(dircolors -b)"

